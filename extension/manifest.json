{
  "manifest_version": 3,
  "name": "PinyinCtrlF",
  "version": "0.0.1",
  "description": "Ctrl+F for Chinese name matching with pinyin/initials.",
  "action": {
    "default_title": "Open PinyinCtrlF PDF Viewer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["vendor/pdfjs/pdf.worker.mjs"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/pinyin-pro.js", "content.js"]
    }
  ]
}
